<td>
  <%= link_to user.email, user %>
</td>
<td>
  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %>
    <%= f.submit t('activerecord.attributes.user.change_role'), :class => 'button-xs' %>
  <% end %>
</td>
<td>
  <%= link_to(t('activerecord.attributes.user.delete_user'), user_path(user), :data => { :confirm => t('activerecord.attributes.user.sure') }, :method => :delete, :class => 'button-xs') unless user == current_user %>
</td>
