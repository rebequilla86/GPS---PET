<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3><%= t('devise.sessions.init_session') %></h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to t('devise.sessions.forgot_password'), new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <%= f.submit t('devise.sessions.sign_in'), :class => 'button right' %>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox" style="width:150px">
        <label>
          <%= f.check_box :remember_me %> <%= t('devise.sessions.remember_me') %>
        </label>
      </div>
    <% end -%>
    <%- if devise_mapping.registerable? %>
      <%= link_to t('devise.sessions.sign_up'), new_registration_path(resource_name) %>
    <% end -%> 
  <% end %>
</div>
