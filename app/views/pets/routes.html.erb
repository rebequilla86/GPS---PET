<%#= render 'map' %>
<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyDR5pZb3x_z86wNwysHQMISWDxiX1P_9eM"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div>
  <div id="map" style='width: 600px; height: 400px; margin-left: auto; display:inline-block;'></div>
  <div id="button_route" style="float: right;">
    <%= button_to "Iniciar nueva ruta", pet_new_route_path, :class => "inbox-sf-add-btn tip", :method => :get %>
  </div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>


<div class="container">
  <h2><%= t 'activerecord.attributes.walk.list' %></h2>

  <table class="table">
    <tr>
      <th><%= t 'activerecord.attributes.walk.name' %></th>
      <th><%= t 'activerecord.attributes.walk.created_at' %></th>
      <th><%= t 'activerecord.attributes.walk.duration' %></th>
      <th><%= t 'activerecord.attributes.walk.last_data_received' %></th>
      <th><%= t 'activerecord.attributes.walk.state' %></th>
      <th><%= t 'activerecord.attributes.walk.walker' %></th>
      <th colspan="3"></th>
    </tr>

    <% @walks.each do |walk| %>
      <tr>
        <td><%= walk.name %></td>
        <td><%= walk.created_at %></td>
        <td><%= walk.duration %></td>
        <td><%= walk.last_data_received %></td>
        <td><%= walk.state %></td>
        <td><%= walk.walker %></td>
        <td><%= link_to (t 'activerecord.attributes.walk.delete'), pet_routes_path(pet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end unless @walks.nil? %>
  </table>
</div>
